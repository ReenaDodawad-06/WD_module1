#animateball {
    width: 100px;
    height: 100px;
    border-radius: 50%;
    background-color: red;
    position: relative; /* <-- This is required for 'top' to work */
    animation-name: animateball; /* <-- Needed to reference your keyframes */
    animation-duration: 180ms;
    animation-delay: 30ms;
    animation-iteration-count: infinite;
    animation-direction: alternate; /* Optional: makes it bounce up and down */
}

@keyframes animateball {
    from {
        top: 100px;
        background-color: blue;
    }
    to {
        top: 200px;
        background-color: red;
    }
}